@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode=@true />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Class="me-3"
            Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        
        @* dynamic part of the app bar that may change on every page *@
        <SectionOutlet SectionName=@Constants.SectionNamePageTitle />
        <SectionContent SectionName=@Constants.SectionNamePageTitle>
            <h1 class="page-title">Transflow Visualizer</h1> @* default app bar title *@
        </SectionContent>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}